@model NoteViewModel
@{
    ViewData["Title"] = "Create";
}

<h1 style="color:white;">Oluştur</h1>

<form class="row" asp-action="Create" method="post" style="color:white;">
    <div class="col-md-10">

        <div class="card-header">Başlık</div>
        <input asp-for="@Model.noteCard.NoteHeader" type="text" class="form-control mb-3" aria-describedby="basic-addon2">

        <div class="card-header">İçerik</div>
        <textarea asp-for="@Model.noteCard.NoteContent" class="form-control" id="editor"></textarea>
    </div>
    <div class="mt-3 col-md-2" style="background-color: #292b2c;">
        @foreach (var item in Model.categories)
        {
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="@Model.noteCard.CategoryId" value="@item.Id" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">

                    @item.CategoryName
                </label>
            </div>

        }
    </div>


    <button type="submit" class="btn btn-secondary mt-3">Gönder</button>

</form>


@section Scripts{
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace(`editor`);
    </script>

}

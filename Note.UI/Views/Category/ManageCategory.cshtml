@model CategoryViewModel

@{
    ViewData["Title"] = "ManageCategory";
}

<h1 style="color:white;">Add Category</h1>

<div class="row">
    <div class="col-md-7">
        <form asp-action="AddCategory" method="post">
            <div class="form-group">
                <label>Category Name</label>
                <input class="form-control" asp-for="@Model.category.CategoryName">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="col-3">

    </div>

    <div class="col-2">
        <ul class="list-group" style="color: white; position:fixed;">
    
            @foreach (var item in Model.categories)
            {

                <a class="list-group-item" style="background-color:red; color: inherit; text-decoration: none;" class="list-group-item " asp-route-category.Id="@item.Id" asp-controller="Category" asp-action="delete">@item.CategoryName</a>

            }
        </ul>
    </div>
</div>